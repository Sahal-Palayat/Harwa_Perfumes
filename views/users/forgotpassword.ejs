<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/user/assets/css/otp.css">
    <title>Document</title>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center container">
       <form action="/resetPassword" method="post" onsubmit="return validate()">
        <div class="card py-5 px-3">
            <h5 class="m-0">Email verification</h5><span class="mobile-text">Enter the code we just send on your Email <b class="text-danger"></b></span>
          
                <input type="password" class="form-control" autofocus="" id="npassword" name="npassword"  required><br>
                <p id="npasswordError"></p>
                <input type="password" class="form-control" autofocus="" id="cpassword" name="cpassword"  required><br>
                <p id="cpasswordError"></p>
               <input type="text" style="display: none;" id="token" name="token" value="<%= token  %>">
                <button style="background: rgb(188, 18, 18); border-radius: 10px; color: aliceblue" type="submit" >Verify-Password</button>
          
            <!-- <div class="text-center mt-5"><span class="d-block mobile-text">Don't receive the code?</span><span class="font-weight-bold text-danger cursor">Resend</span></div> -->
        </div>
    </form>
    </div>
    <script>
        function validate(){

        
        const npassword=document.getElementById('npassword')
        const cpassword=document.getElementById('cpassword')
        const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,}$/;


        const cpasswordError=document.getElementById('cpassword')
        const npasswordError=document.getElementById('cpassword')

        
        
          if(npassword.value !==cpassword.value){
            cpasswordError.innerHTML='Do not Match Password'
            cpasswordError.style.color='red'
            setTimeout(()=>{
                cpasswordError.innerHTML=''
            },5000);
            return false
        }
        if (!passwordRegex.test(npassword.value)) {
            npasswordError.innerHTML = "Please enter a tight password"
            npasswordError.style.color='red'
            setTimeout(() => {
            passwordError.innerHTML = ''
            }, 5000);
            return false;
        }
     return true
}  
            </script>
</body>
</html>